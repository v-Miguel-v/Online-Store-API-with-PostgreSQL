{
  "name": "online-store-api-with-postgresql",
  "version": "1.0.0",
  "description": "Una simple API REST de una tiendita online usando PostgreSQL diseñada como resultado del \"Curso de Backend con Node.js: Base de Datos con PostgreSQL\" de Platzi.",
  "main": "index.js",
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "mysql2": "^3.1.2",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.29.0",
    "sequelize-cli": "^6.6.0"
  },
  "devDependencies": {
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "sequelize-cli": "^6.6.0"
  },
  "scripts": {
    "dev": "nodemon -L index.js",
    "start": "node index.js",
    "lint": "eslint",
    "migrations:generate": "sequelize-cli migration:generate --name",
    "migrations:run": "sequelize-cli db:migrate",
    "migrations:revert": "sequelize-cli db:migrate:undo",
    "migrations:delete": "sequelize-cli db:migrate:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/v-Miguel-v/Online-Store-API-with-PostgreSQL.git"
  },
  "keywords": [
    "nodejs",
    "expressjs",
    "postgresql",
    "platzi-course",
    "backend",
    "api-rest"
  ],
  "author": "Miguel Velásquez <vmiguel.xy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/v-Miguel-v/Online-Store-API-with-PostgreSQL/issues"
  },
  "homepage": "https://github.com/v-Miguel-v/Online-Store-API-with-PostgreSQL#readme"
}
